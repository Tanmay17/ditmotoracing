<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64a0ff"
    tools:context="d.www.myapplication.tracksFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Spinner
        android:id="@+id/spiner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/cust_et"
        android:layout_margin="12dp"
        android:entries="@array/track_array"
        android:prompt="@string/track_prompt"/>
    <Button
        android:id="@+id/but"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:text="Go For The Race"
        android:background="#FF1570FF"/>
</LinearLayout>
</FrameLayout>
